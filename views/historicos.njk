{% extends "base.njk" %}

{% block contents %}
    <div class="container" style="margin-top: 2%;">

        <a href="/dashboard" class="btn btn-primary">Voltar</a>

        <hr class="sep-dot">

        <h2>Histórico comprovantes </h2>

        <hr>

        {% for result in result %}

        <div class="alert alert-primary" role="alert">
            <p>Período {{result.data_inicial|date("DD/MM/Y")}} á {{result.data_final|date("DD/MM/Y")}}</p>
            <p>Valor bruto: {{result.valor_sem_desconto}}</p>
            <p>Valor total da taxa: {{result.taxa}}</p>
            <p>Valor total liquido: {{result.valor}}</p>
            <p>Data de geração do comprovante: {{result.data_transacao}}</p>
            <hr/>
            <a class="btn btn-info" style="color:white;" href="{{url_recibo}}&historico={{result.id}}" target="_blank">Ver Comprovante</a>
        </div>

        {% endfor %}

    </div>
{% endblock %}

{% block scripts %}
    <script>
        $('.search').click(function(){
            $(this).html('Buscando...');
        });
    </script>
{% endblock %}